.large-4.columns.profile_bottom_L
  #task_available_message
  %h3 Available Tasks
  - tasks_available.each do |task|
    %ul.task
      %li Name: #{link_to task.name, captain_task_path(current_user, task)}
      %li Value: #{task.worth}
      %li Posted: #{task.created_at.strftime(time_format(task))}

.large-4.columns.profile_bottom_M
  #task_assigned_message
  %h3 Assigned Tasks
  - tasks_assigned.each do |task|
    %ul.task
      %li Name: #{link_to task.name, captain_task_path(current_user, task)}
      %li Assigned to: #{task.pirate.username}
      %li Value: #{task.worth}
      %li Posted: #{task.created_at.strftime(time_format(task))}

.large-4.columns.profile_bottom_R
  #task_completed_message
  %h3 Completed Tasks
  - tasks_completed.each do |task|
    %ul.task
      %li Name: #{link_to task.name, captain_task_path(current_user, task)}
      %li Value: #{task.worth}
      %li Posted: #{task.created_at.strftime(time_format(task))}
