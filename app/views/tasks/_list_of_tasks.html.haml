Tasks Waiting for Verification
#verify_task_message
- tasks.each do |task|
  .small-12.columns.t_and_e
    %li Name: #{link_to task.name, captain_task_path(current_user, task)}
    %li Assigned to: #{task.pirate.username}
    %li Value: #{task.worth}
    %li Posted: #{task.created_at.strftime(time_format(task))}
    = link_to 'Confirm Complete?', captain_confirms_path(current_user, task), :remote => true, :class => 'tiny button alert round', :id => 'verified_task'
