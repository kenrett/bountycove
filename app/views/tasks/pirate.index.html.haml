%h1 All Adventures for the Pirate #{current_user.username} 
%h5 Total Gold: #{current_user.coins}

%p
  =link_to "Back", pirate_path(current_user)

- if flash[:task_assigned]
  = flash[:task_assigned]

.task_on_board
  %h4 Available Tasks
  %ul
    - @tasks_on_board.each do |task|
      %li Name: #{link_to task.name, pirate_task_path(current_user, task)}
      %li Value: #{task.worth}
      %li Posted: #{task.created_at.strftime(time_format(task))}
      = button_to 'Accept task', pirate_adds_path(current_user, task)
      %br

.task_assigned
  %h4 Assigned Tasks
  %ul
    - @tasks_assigned.each do |task|
      %li Name: #{link_to task.name, pirate_task_path(current_user, task)}
      %li Value: #{task.worth}
      %li Assigned: #{task.updated_at.strftime(time_format(task))}
      = button_to 'Task Complete!', pirate_completes_path(current_user, task)
      %br

.task_need_verify
  %h4 Tasks waiting for Verification
  %ul
    - @tasks_need_verify.each do |task|
      %li Name: #{link_to task.name, pirate_task_path(current_user, task)}
      %li Value: #{task.worth}
      %li Completed: #{task.updated_at.strftime(time_format(task))}
      %br
  
.task_completed
%h4 Completed Tasks
%ul
  - @tasks_completed.each do |task|
    %li Name: #{link_to task.name, pirate_task_path(current_user, task)}
    %li Value: #{task.worth}
    %li Verified: #{task.updated_at.strftime(time_format(task))}
    %br
