%h1 Welcome to ParentalFinanceEducation.com!
- if @user && @user.errors.any?
  = render :partial => "shared/signup_errors", :user => @user
.sign_up
  = form_for @user do |f|
    = f.label :first_name
    = f.text_field :first_name
    %br
    = f.label :last_name  
    = f.text_field :last_name  
    %br
    = f.label :username
    = f.text_field :username
    %br
    = f.label :email
    = f.text_field :email
    %br
    = f.label :password
    = f.password_field :password
    %br
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = f.submit "Sign Up!"
