.error_max_treasure_limit
= form_for [current_user, treasure], :remote => true do |f|
  = f.label :name
  = f.text_field :name, :required => true
  = f.label :description
  = f.text_field :description, :required => true
  = f.label :photo
  = f.text_field :photo
  = f.label :price
  = f.text_field :price, :required => true

  %strong#tax_rate_title Tax Rate:
  %span#tax_rate= number_to_percentage(current_user.tax_rate, :precision => 2)
  %br
  %strong#total_price_title Total Price:
  %span#total_price 0
  %br
  = f.submit "Ahoy!", :class => 'new_pirate_button'
