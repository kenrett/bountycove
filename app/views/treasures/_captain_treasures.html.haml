- treasures.each do |treasure|
  %ul.treasure
    %li Name: #{treasure.name}
    %li Description: #{treasure.description}
    %li Photo: #{treasure.photo}
    %li Price: #{treasure.price}
    %li Tax: #{treasure.tax}
    %li#last
      Total Price:
      %span.total_price
    - if bought
      %a.tiny.button.alert.round{:href => captain_delivers_treasure_path(current_user, treasure) }Deliver
