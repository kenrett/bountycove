%h1
  #{@captain.username}
%p
  = 'Hello ' "#{@captain.first_name}!"

  = form_tag logout_path, :method => :post do
    = submit_tag "Logout"

.task_on_board
  %h1 Current Tasks
  - unless @tasks_on_board.nil?
    - @tasks_on_board.each do |task|
      = task.created_at
      = task.name
      = task.description
      = task.worth

.task_assigned
  %h1 Assigned Tasks
  - unless @tasks_assigned.nil?
    - @tasks_assigned.each do |task|
      = task.created_at
      = task.name
      = task.description
      = task.worth

.task_completed
  %h1 Completed Tasks
  - unless @tasks_on_board.nil?
    - @tasks_completed.each do |task|
      = task.created_at
      = task.name
      = task.worth

%table.parent_admin
  %tr
    %td
      .check_status
        #text 
        = link_to "Add Pirate", new_captain_pirate_path(@captain)
    %td
      .add_reward
        #text 
        = link_to "Add Loot", captain_treasures_path(@captain)
  %tr
    %td
      .add_task
        #text 
        = link_to "Create Adventure", captain_tasks_path(@captain)
    %td
      .add_event
        #text 
        = link_to "Add Event", "#"
